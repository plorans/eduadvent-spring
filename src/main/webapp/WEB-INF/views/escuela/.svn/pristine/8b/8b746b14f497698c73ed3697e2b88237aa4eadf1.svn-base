body {
  background:#FFFFFF;
  margin:0;
  padding:0;
  color:#000;
  font-family:Arial, Helvetica, sans-serif;
}
#header {
  float:left;
  width:100%;
  font-size:60%;
  line-height:normal;
  }
#header ul {
  margin:1;
  padding:0px 0px 1px 0px;
  list-style:none;
  }
#header li {
  float:left;
  background:url("../img/tabs/left.gif") no-repeat left top;
  margin:0;
  padding:0 0 0 9px;
  cursor:pointer;
  }
#header a {
  float:left;
  display:block;
  background:url("../img/tabs/right.gif") no-repeat right top;
  padding:4px 4px 6px 0px;
  text-decoration:none;
  font-weight:bold;
  color:black;
  }
#header a:hover {
  color:#765;
  }
#header #current {
  background-image:url("../img/tabs/left_on.gif");
  }
#header #current a {
  background-image:url("../img/tabs/right_on.gif");
  color:#333;
  padding-bottom:4px;
  }