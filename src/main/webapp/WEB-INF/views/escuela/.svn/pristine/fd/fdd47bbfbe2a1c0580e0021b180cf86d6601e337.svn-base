/* === ARROWS OF THE TIPS === */
div.jpopup img[src^='images/arrow'], div.jspopup img[src^='images/arrow']{
	position:absolute;
}

/* === CONTROLS FOR THE SEQUENTIAL TIPS === */
.controls{
	margin-top: 10px;
}

.controls .counter{
	font-size: 16px;
	float: right;
}

.controls .back, .controls .next, .controls .close, .controls .play{
	font-size: 16px;
	font-family: arial;
	text-decoration: none;
	float: left;
	padding: 1px 5px;
	border: 1px solid #C5C5C5;
	color: black;
	text-align: center;
	height: 20px;
	width: 15px;

	background: #F9F9F9;
	background-image: -moz-linear-gradient(top, #ffffff, #e6e6e6);
	background-image: -webkit-gradient(linear, 0 0, 0 100%, from(#ffffff), to(#e6e6e6));
	background-image: -webkit-linear-gradient(top, #ffffff, #e6e6e6);
	background-image: -o-linear-gradient(top, #ffffff, #e6e6e6);
	background-image: linear-gradient(to bottom, #ffffff, #e6e6e6);
}
.controls .play{
	font-size: 15px;
}

.controls .back:hover, .controls .next:hover, .controls .close:hover, .controls .play:hover{
  	background-image: -moz-linear-gradient(top, #ffffff, #CFCFCF);
	background-image: -webkit-gradient(linear, 0 0, 0 100%, from(#ffffff), to(#CFCFCF));
	background-image: -webkit-linear-gradient(top, #ffffff, #CFCFCF);
	background-image: -o-linear-gradient(top, #ffffff, #CFCFCF);
	background-image: linear-gradient(to bottom, #ffffff, #CFCFCF);
}

.controls .back{
	border-top-left-radius: 3px;
	border-bottom-left-radius: 3px;
}

.controls .close{
	border-top-right-radius: 3px;
	border-bottom-right-radius: 3px;
}

.jspopup{
	min-width: 140px;
}


