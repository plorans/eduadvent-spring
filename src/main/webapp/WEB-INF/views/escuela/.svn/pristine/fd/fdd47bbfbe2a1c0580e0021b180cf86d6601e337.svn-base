/* === CONTAINERS OF THE TIPS === */
div.jpopup, div.jspopup{
	font-family:sans-serif;
	font-weight: 200;
	z-index: 1;
	font-size: 13px;
	display:none;
	position:absolute;
	background:white;
	border: 1px solid #E1E1E1;
	border-radius: 3px;
	padding: 10px;
	vertical-align: top;
	
	-webkit-box-shadow: 0 1px 5px 0px #6E6E6E;
 	-moz-box-shadow: 0 1px 5px 0px #6E6E6E;
	box-shadow: 0 1px 5px 0px #6E6E6E;
	z-index:2000;
}
